<%- include("header")-%>

    <div class="box" id="heading">
        <h1>My To Do List</h1>

    </div>
    <div class="box" id="heading">

        <h1> <%=kindOfDay%>! </h1>

    </div>
    <div class="box" >
          <%  for(let i=0;i<newlistitems.length;i++) {%>
            <div class="item">
              <input type="checkbox">
              <p><%= newlistitems[i] %></p>
            </div>
          <%}%>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="enter new task">
                <button type="submit" name="list" value=<%= kindOfDay %> >+</button>
            </form>

    </div>

<%- include("footer")-%>
